<h1>Welcome {{user.firstName}}</h1>
<h4>your stories</h4>

{{#if stories}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each stories}}
      <tr>
        <td><a href="/stories/show/{{id}}">{{title}}</a></td>
        <td>{{formatDate date 'YYYY MM DD'}}</td>
        <td><span class="dash-status">{{status}}</span></td>
        <td>
          <a class="btn left-align" href="/stories/edit/{{id}}"><i class="fa fa-pencil"></i> edit</a>

          <form action="/stories/{{id}}?_method=DELETE" method="POST" id="delete-form">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="red btn"><i class="fa fa-remove"></i> Delete</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
<p>No stories found</p>
{{/if }}

