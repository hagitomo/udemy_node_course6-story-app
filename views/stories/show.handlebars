<h1>show story</h1>
<div class="row">
  <div class="col s12 m8">
    <h3>{{story.title}}
      <small>{{{editIcon story.user.id user.id story.id false }}}</small>
    </h3>
    <div class="card story">
      <div class="card-content">
        <span class="card-title">{{formatDate story.date 'YYYY MM DD'}}</span>
        <p>{{{story.body}}}</p>
      </div>
    </div>
    {{#if story.allowComments}}
    {{#each story.comments}}
    <div class="card">
      <div class="card-content">
        <h5>{{commentBody}}</h5>
        <div class="chip">
          <img src="{{commentUser.image}}">
          <a href="/stories/user/{{commentUser.id}}">{{commentUser.firstName}} {{commentUser.lastName}}</a>
        </div>
        <br>
        <small>Posted: {{formatDate commentDate 'YYYY MM DD'}}</small>
      </div>
    </div>
    {{/each}}
    <div class="card">
      <div class="card-content">
        <span class="card-title">Comments</span>
        {{#if user}}
        <form action="/stories/comment/{{story.id}}" method="post">
        <div class="input-field">
          <textarea name="commentBody" id="" cols="30" rows="10" class="materialize-textarea"></textarea>
          <label for="commentBody">Add comment </label>
        </div>
        <input type="submit" value="Submit" class="btn">
        </form>
        {{else}}
        <p>please <a href="/auth/google/">log in</a> to leave comment</p>
        {{/if}}
      </div>
    </div>
    {{/if}}
  </div>
  <div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">{{story.user.firstName}}<br>{{story.user.lastName}}</span>
        <img src="{{story.user.image}}" alt="" class="circle responsive-img">
      </div>
      <div class="card-action text-center"><a href="/stories/user/{{story.user.id}}" class="mr-0">More from <br>
      {{story.user.firstName}}</a></div>
    </div>
  </div>
</div>
